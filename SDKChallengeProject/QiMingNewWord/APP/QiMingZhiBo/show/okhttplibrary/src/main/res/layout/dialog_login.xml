<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/layout_dialog_login"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:contentDescription="@string/demonstration"
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/mg_70"
            android:layout_height="@dimen/mg_70"
            android:padding="@dimen/mg_20"
            android:src="@mipmap/dlg_shift"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tx_size_20"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/mg_10"
            android:text="@string/logining"/>

    </LinearLayout>

</LinearLayout>