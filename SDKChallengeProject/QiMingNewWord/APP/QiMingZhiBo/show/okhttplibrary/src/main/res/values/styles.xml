<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 圆角透明无标题对话框 -->
    <style name="myDialogStyle_transparent" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <declare-styleable name="ProcessButton">
        <attr name="progressColor" format="color" />
        <attr name="progressBgColor" format="color" />
        <attr name="buttonNormalColor" format="color" />
        <attr name="buttonPressedColor" format="color" />
        <attr name="buttonCornerRadius" format="dimension"/>
        <attr name="showProgressNum" format="boolean"/>
    </declare-styleable>
    <style name="CustomTabLayout"  parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorGreen</item> <!--TAB底部滑块颜色-->
        <item name="tabIndicatorHeight">3dp</item> <!--TAB底部滑块高度-->
        <item name="tabPaddingStart">12dp</item> <!--TAB左边padding-->
        <item name="tabPaddingEnd">12dp</item> <!--TAB右边padding-->
        <item name="tabBackground">?attr/selectableItemBackground</item> <!--TAB背景色-->
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item> <!--TAB文字样式-->
        <item name="tabSelectedTextColor">#ff212121</item> <!--TAB选中文字颜色-->
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab"> <!--TAB文字样式-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="textAllCaps">false</item> <!--英文大写,默认true-->
    </style>
</resources>
